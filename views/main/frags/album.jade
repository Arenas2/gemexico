.album(layout="row" layout-align="center center")
    div(flex="80")
        md-card(layout="row")
            md-button(ui-sref="home.deporte" style="display:flex")
                md-icon(style="margin:auto") keyboard_arrow_left
            p {{evento.nombre}}
        md-grid-list(md-cols="3" md-cols-xs="1" md-cols-md="2" md-cols-sm="1" md-gutter="5px" md-row-height="250px" md-row-height-md="250px" md-row-height-sm="200px"  md-row-height-xs="200px")
            md-grid-tile(md-colspan="1" md-rowspan="1" ng-repeat="foto in album")
                imagenalbum.foto(id="{{foto.id}}")
